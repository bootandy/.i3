    printf '\n#3383AE'
elif [[ "$temp" -ge 75 ]]; then
    #printf '\n#E41C28'
    printf '\n#0F0'
elif [[ "$temp" -ge 60 ]]; then
    printf '\n#EEBF13'
fi
