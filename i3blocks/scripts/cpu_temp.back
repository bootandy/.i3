#!/bin/bash
temp=$(
    sensors 'coretemp-*' \
        | grep '^Package id' \
        | awk '{ print $4 }' \
        | grep -o '[0-9]\+' \
        | head -n1
)
temp=81

if [[ "$temp" -lt 30 ]]; then
    printf '\uf2cb'
elif [[ "$temp" -lt 40 ]]; then
    printf '\uf2ca'
elif [[ "$temp" -lt 50 ]]; then
    printf '\uf2c9'
elif [[ "$temp" -lt 60 ]]; then
    printf '\uf2c8'
else
    printf '\uf2c9'
fi

# F00 -> FF0 -> 0F0
# 30 -> safe
# 80 -> red


#printf 'ðŸ’»  %s\u2009Â°C\n' $temp
printf 'ðŸ’»  %sÂ°C\n' $temp

