[cpu]
label=CPU
command=/usr/share/i3blocks/cpu_usage
interval=10
min_width=CPU: 100.00%
#separator=false

#[load]
#command=/usr/share/i3blocks/load_average
#interval=10

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=5

[weather]
command=~/.i3/i3blocks/scripts/weather.sh
interval=3600

[network]
full_text=Network
command=nm-connection-editor
align=left

