[cpu]
full_text=CPU
command=~/.config/i3/i3blocks/scripts/cpu.sh
color=#FF66FF
interval=10
min_width=C: 100.00%

[battery2]
command=~/.config/i3/i3blocks/scripts/battery2
markup=pango
interval=30

[time]
full_text=TIME
command=date '+%Y-%m-%d %H:%M'
interval=60
color=#00FF00

[network_type]
full_text=Network
command=~/.config/i3/i3blocks/scripts/net_type.sh
interval=60
min_width=WIFI
color=#FFFFFF
align=left

[network]
full_text=Network
command=nm-connection-editor
align=left

